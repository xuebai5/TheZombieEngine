<?xml version="1.0" encoding="utf-8" ?>
<RenderPath name="impostor" shaderpath="home:data/shaders/2.0">

    <!-- define render targets -->
    <RenderTarget name="ImpostorColorBuffer"  format="A8R8G8B8" width="128" height="128" />
    <RenderTarget name="ImpostorNormalBuffer" format="A8R8G8B8" width="128" height="128" />
   
    <!-- render color into ImpostorColorBuffer -->
    <Pass name="color" shader="shaders:trag_passes.fx" technique="tPassColor" renderTarget="ImpostorColorBuffer" clearColor="0.0 0.0 0.0 0.0" clearDepth="1.0">
        <Phase name="depth" shader="shaders:trag_phases.fx" technique="tPhaseDepth" fourcc="dept" sort="Surface" lights="Off">
        </Phase>
        <Phase name="instanced" shader="shaders:trag_phases.fx" technique="tPhaseInstanced" fourcc="inst" sort="Surface" lights="Off" flags="ShapeVisible">
        </Phase>
        <Phase name="opaque" shader="shaders:trag_phases.fx" technique="tPhaseOpaque" fourcc="colr" sort="Surface" lights="Off">
        </Phase>
        <!--Phase name="alpha" shader="shaders:trag_phases.fx" technique="tPhaseAlpha" fourcc="alph" sort="BackToFront" lights="On">
        </Phase-->
    </Pass>
    
    <!-- render color into ImpostorNormalBuffer -->
    <Pass name="normal" shader="shaders:trag_passes.fx" technique="tPassColor" renderTarget="ImpostorNormalBuffer" clearColor="0.5 0.5 0.5 1.0" clearDepth="1.0">
        <Phase name="normal" shader="shaders:trag_phases.fx" technique="tPhaseInstanced" fourcc="norm" sort="Surface" lights="Off" flags="ShapeVisible">
        </Phase>
    </Pass>
    
</RenderPath>
