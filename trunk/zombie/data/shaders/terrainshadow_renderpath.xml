<?xml version="1.0" encoding="utf-8" ?>
<RenderPath name="dx7" shaderpath="home:data/shaders/2.0">

    <!-- define render targets -->
    <RenderTarget name="TerrainShadowmap" format="A8R8G8B8" width="512" height="512" />

    <!-- declare variables -->
    <Float4 name="ShadowProjectionDeform" value="1.0 0.0 0.0 1.0" />
   
    <!-- render shadow depth to shadow buffer -->
    <Pass name="color" shader="shaders:trag_passes.fx" technique="tPassTerrainShadow" renderTarget="TerrainShadowmap" clearColor="1.0 1.0 1.0 1.0" clearDepth="1.0" clearStencil="0">
        <Float4 name="ShadowProjectionDeform" variable="ShadowProjectionDeform" />

        <Phase name="depth" shader="shaders:trag_phases.fx" technique="tPhaseShadowDepth" fourcc="sdep" sort="Surface" lights="Off">
        </Phase>
        <!--Phase name="gmsd" shader="shaders:trag_phases.fx" technique="tPhaseShadowDepth" fourcc="gmsd" sort="Surface" lights="Off">
        </Phase-->
    </Pass>
    
</RenderPath>
