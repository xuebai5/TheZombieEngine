<?xml version="1.0" encoding="utf-8" ?>
<RenderPath name="dx7" shaderpath="home:data/shaders/fixed">

    <!-- declare shaders and technique aliases -->
    <Shader name="passes" file="shaders:trag_passes.fx" />
    <Shader name="phases" file="shaders:trag_phases.fx" />
    <Shader name="terrain" file="shaders:trag_terrain.fx" />

    <!-- define render targets -->
    <RenderTarget name="Offscreen"   format="A8R8G8B8"       relSize="1.0" />
    
    <!-- declare variables -->
    <Float4 name="Luminance"   value="0.299 0.587 0.114 0.0" />
    <Float4 name="Balance"     value="1.0 1.0 1.0 1.0" />
    <Float  name="Saturation"  value="1.0" />
    <Float4 name="ShadowColor" value="0.0 0.0 0.0 0.5" />
    <Int    name="ShadowSrcBlend" value="1" />
    <Int    name="ShadowDstBlend" value="2" />

    <!-- render into framebuffer -->
    <Pass name="Scene" shader="shaders:trag_passes.fx" technique="tPassColor" renderTarget="Offscreen" clearColor="0.5 0.5 0.5 1.0" clearDepth="1.0" clearStencil="0">
        <Phase name="depth" shader="shaders:trag_phases.fx" technique="tPhaseDepth" fourcc="dept" sort="Surface" lights="Off" flags="ShapeVisible">
        </Phase>
        <Phase name="instanced" shader="shaders:trag_phases.fx" technique="tPhaseInstanced" fourcc="inst" sort="Surface" lights="On" flags="ShapeVisible">
        </Phase>
        <Phase name="opaque" shader="shaders:trag_phases.fx" technique="tPhaseOpaque" fourcc="colr" sort="Surface" lights="On" flags="ShapeVisible">
        </Phase>
        <Phase name="terrainHoles" shader="shaders:trag_terrain.fx" technique="tPhaseTerrainHole" fourcc="gmmh" sort="Surface" lights="Off" flags="ShapeVisible">
        </Phase>
        <Phase name="terrain0" shader="shaders:trag_terrain.fx" technique="tPhaseTerrain0" fourcc="gmm0" sort="Surface" lights="On">
        </Phase>
        <Phase name="terrain1" shader="shaders:trag_terrain.fx" technique="tPhaseTerrain1" fourcc="gmm1" sort="Surface" lights="On">
        </Phase>
        <Phase name="sky" shader="shaders:trag_phases.fx" technique="tPhaseSky" fourcc="sky0" sort="Surface" lights="Off" flags="ShapeVisible">
        </Phase>
        <Phase name="alpha" shader="shaders:trag_phases.fx" technique="tPhaseAlpha" fourcc="alph" sort="BackToFront" lights="On" flags="ShapeVisible">
        </Phase>
    </Pass>
    
    <Pass name="shadowVolumes" shader="shaders:trag_passes.fx" technique="tPassShadow" clearStencil="0">
        <Float4 name="AlphaSrcBlend" variable="ShadowSrcBlend" />
        <Float4 name="AlphaDstBlend" variable="ShadowDstBlend" />
        <Phase name="shadowvolumes" shader="shaders:trag_phases.fx" technique="tPhaseShadowVolume" fourcc="shdv" sort="Surface" lights="On" flags="ShadowVisible" lightflags="RenderOncePerLight">
        </Phase>
    </Pass>

    <!-- draw stencil plane -->
    <Pass name="shadowPlane" shader="shaders:stencil_plane.fx" renderTarget="Offscreen" drawQuad="Yes" shadowEnabledCondition="Yes">
        <Float4 name="MatDiffuse" variable="ShadowColor" />
    </Pass>
    
    <!-- draw first person geometry -->
    <Pass name="firstPerson" shader="shaders:trag_passes.fx" technique="tPassColor" renderTarget="Offscreen" clearDepth="1.0" >
        <Phase name="depth" shader="shaders:trag_phases.fx" technique="tPhaseDepth" fourcc="dept" sort="Surface" lights="Off" flags="AlwaysOnTop">
        </Phase>
        <Phase name="opaque" shader="shaders:trag_phases.fx" technique="tPhaseOpaque" fourcc="colr" sort="Surface" lights="On" flags="AlwaysOnTop">
        </Phase>
        <Phase name="alpha" shader="shaders:trag_phases.fx" technique="tPhaseAlpha" fourcc="alph" sort="BackToFront" lights="On" flags="AlwaysOnTop">
        </Phase>
    </Pass>

    <!-- compose the final frame -->
    <Pass name="compose" shader="shaders:filter_sepia.fx" drawQuad="Yes">
        <Texture name="DiffMap0" value="Offscreen" />
        <Float4 name="MatDiffuse" variable="Balance" />
        <Float4 name="MatAmbient" variable="Luminance" />
        <Float name="Intensity0" variable="Saturation" />
    </Pass>

    <Pass name="overlay" shader="shaders:trag_passes.fx" technique="tPassColor">
        <Phase name="alpha" shader="shaders:trag_phases.fx" technique="tPhaseOverlay" fourcc="over" sort="Surface" lights="Off" flags="ShapeVisible">
        </Phase>
    </Pass>
    
    <Pass name="Editor" >
        <Phase name="editor" fourcc="edit" sort="Surface" lights="Off">
        </Phase>
        <Phase name="grassedition" fourcc="gmge" sort="Surface" lights="Off">
        </Phase>
    </Pass>

    <!-- compose the final frame -->
    <!--Pass name="compose" shader="shaders:hdr.fx" technique="tCopy" drawQuad="Yes">
        <Texture name="DiffMap0" value="Emissive" />
    </Pass-->
    
    <!-- fini -->
</RenderPath>
